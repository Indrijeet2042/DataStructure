//Delete the largest element in an array.

#include <iostream>

using namespace std;

int main()
{
    int num,i=0;
    int arr[i];
    cout<<"Enter the number of elements:";
    cin>>num;
    for(int i=0;i<num;i++)
    {
        cin>>arr[i];
    }
    cout<<endl;
     for(int i=0;i<num;i++)
    {
        cout<<arr[i]<<" ";
    }
    cout<<endl;
    for(int j=1;j<num;j++)
       {
        if(arr[i]>arr[j])
        {
        }
        else
        {
            i=j;
        }
    }
    cout<<endl;
    for(int k=i;k<num-1;k++)
    {
        arr[k]=arr[k+1];
    }
    cout<<"The array after deletion:"<<endl;
    for(int i=0;i<num-1;i++)
    {
        cout<<arr[i]<<" ";
    }


    return 0;
}
